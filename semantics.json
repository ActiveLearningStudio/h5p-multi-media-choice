            "options": [
              "H5P.Image 1.1"
            ]
          },
          {
            "name": "disableImageZooming",
            "type": "boolean",
            "label": "Disable image zooming",
            "default": false,
            "optional": true,
            "widget": "showWhen",
            "showWhen": {
              "rules": [
                {
                  "field": "media",
                  "equals": "H5P.Image 1.1"
                }
              ]
